{
    "name": "nove-api",
    "version": "1.0.0",
    "author": "nove-org",
    "license": "MIT",
    "scripts": {
        "build": "rm -rf build/ && tsc --build",
        "build:sass": "sass --watch src/sass:src/static/css --style=compressed ",
        "start": "yarn run build && node build/index.js",
        "watch": "yarn run -s nodemon -e ts,json -x \"yarn run -s start\" -w \"./src\"",
        "postinstall": "yarn -s patch-package",
        "prepare": "husky install",
        "test": "jest",
        "format": "npx pretty-quick --staged",
        "checkCommitMessage": "yarn run -s commitlint -V -c --edit",
        "db:update": "yarn run -s prisma migrate dev",
        "db:generate": "yarn run -s prisma generate"
    },
    "dependencies": {
        "@prisma/client": "4.7.1",
        "bcrypt": "^5.1.0",
        "chalk": "4.1.2",
        "cors": "^2.8.5",
        "dotenv": "^16.0.3",
        "ejs": "^3.1.8",
        "express": "^4.18.2",
        "micromatch": "^4.0.5",
        "yup": "^0.32.11",
        "zod": "^3.19.1"
    },
    "devDependencies": {
        "@commitlint/config-conventional": "^17.3.0",
        "@types/bcrypt": "^5.0.0",
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.14",
        "@types/micromatch": "^4.0.2",
        "@types/node": "^18.11.10",
        "commitlint": "^17.3.0",
        "husky": "^8.0.2",
        "jest": "^29.3.1",
        "nodemon": "^2.0.20",
        "patch-package": "^6.5.0",
        "prettier": "^2.8.0",
        "pretty-quick": "^3.1.3",
        "prisma": "^4.7.1",
        "typescript": "^4.9.3"
    }
}
