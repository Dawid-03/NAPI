{
    "name": "nove-api",
    "version": "1.0.0",
    "author": "nove-org",
    "license": "hehehe-nono-dis-not-for-u",
    "scripts": {
        "build": "rm -rf build/ && tsc --build",
        "start": "yarn build && node build/index.js",
        "watch": "yarn nodemon -e ts,json -x \"yarn start\" -w \"./src\"",
        "postinstall": "yarn patch-package",
        "prepare": "husky install && yarn db:update",
        "test": "jest",
        "format": "npx pretty-quick --staged",
        "checkCommitMessage": "yarn commitlint -V -c --edit",
        "db:update": "yarn prisma migrate dev",
        "db:generate": "yarn prisma generate"
    },
    "dependencies": {
        "@prisma/client": "4.7.1",
        "chalk": "4.1.2",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "yup": "^0.32.11"
    },
    "devDependencies": {
        "@commitlint/config-conventional": "^17.3.0",
        "@types/express": "^4.17.14",
        "@types/node": "^18.11.10",
        "commitlint": "^17.3.0",
        "husky": "^8.0.2",
        "jest": "^29.3.1",
        "nodemon": "^2.0.20",
        "patch-package": "^6.5.0",
        "prettier": "^2.8.0",
        "pretty-quick": "^3.1.3",
        "prisma": "^4.7.1",
        "typescript": "^4.9.3"
    }
}
