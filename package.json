{
  "name": "nove-api",
  "version": "1.0.0",
  "author": "nove-org",
  "license": "hehehe-nono-dis-not-for-u",
  "scripts": {
    "build": "rm -rf build/ && tsc --build",
    "start": "yarn build && node build/index.js",
    "watch": "yarn nodemon -e ts,json -x \"yarn start\" -w \"./src\"",
    "postinstall": "yarn patch-package",
    "prepare": "yarn db:update",
    "db:update": "yarn prisma migrate dev"
  },
  "dependencies": {
    "chalk": "4.1.2",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@types/express": "^4.17.14",
    "@types/node": "^18.11.10",
    "nodemon": "^2.0.20",
    "patch-package": "^6.5.0",
    "prisma": "^4.7.1",
    "typescript": "^4.9.3"
  }
}
